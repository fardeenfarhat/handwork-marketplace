# Database Configuration
DATABASE_URL=sqlite:///./handwork_marketplace.db

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production-min-32-chars
SECRET_KEY=your-secret-key-here-change-in-production

# Payment Configuration - Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Payment Configuration - PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
PAYPAL_MODE=live

# Payment Settings
PLATFORM_FEE_PERCENTAGE=5.0
AUTO_RELEASE_DAYS=14

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth Configuration - Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# OAuth Configuration - Apple
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# SMS Configuration - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration
MAIL_ENABLED=true
MAIL_DEVELOPMENT_MODE=false
MAIL_TIMEOUT=5
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_sendgrid_api_key
MAIL_FROM=noreply@handworkmarketplace.com
MAIL_FROM_NAME=Handwork Marketplace
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
MAIL_CONSOLE_LOGGING=false
MAIL_VALIDATION_STRICT=true

# Push Notifications - Firebase
FIREBASE_SERVER_KEY=your_firebase_server_key

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=https://handworkmarketplace.com,https://admin.handworkmarketplace.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session Configuration
SESSION_TIMEOUT_MINUTES=1440